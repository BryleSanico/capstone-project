{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "jest"
    ], 
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "index.js", 
    "App.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js"
  ], 
 "engines": {
    "node": ">=18"
  },
 "extends": "@react-native/typescript-config/tsconfig.json"
}

